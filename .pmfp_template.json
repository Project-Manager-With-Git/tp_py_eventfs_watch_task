{
    "language": "py",
    "env": "venv",
    "description": "",
    "author": "hsz12",
    "template_type": "watcher",
    "requires": [
        "pyproxypattern >= 0.0.1",
        "schema_entry >= 0.1.5",
        "pyloggerhelper >= 0.0.2",
        "apscheduler >= 3.7.0"
    ],
    "test_requires": [
        "coverage >= 5.5",
        "mypy >= 0.800",
        "autopep8 >= 1.5.6",
        "pylint >= 2.8.0",
        "pydocstyle>=6.0.0"
    ],
    "template_keys": {
        "app_name": {
            "description": "应用名",
            "default": "{{ project_name }}"
        }
    },
    "components": {
        "app": {
            "source": "app/app.py.jinja",
            "description": "用于构造应用的文件",
            "default_path": "{{ project_name }}/app.py"
        },
        "main": {
            "source": "app/__main__.py.jinja",
            "description": "应用的入口文件",
            "default_path": "{{ project_name }}/__main__.py"
        },
        "event_handdler": {
            "source": "app/event_handdler.py.jinja",
            "description": "apscheduler的包装,可以单独作为模块使用",
            "default_path": "{{ project_name }}/event_handdler.py"
        },
        "dockerfile": {
            "source": "cp_dockerfiles//python_singal_dockerfile",
            "description": "定时任务打包为镜像的dockerfile",
            "default_path": "dockerfile"
        }
    }
}